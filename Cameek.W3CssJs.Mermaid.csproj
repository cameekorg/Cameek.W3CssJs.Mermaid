<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <!-- Compiler Settings -->
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <RazorLangVersion>8.0</RazorLangVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

        <!-- NuGet Metadata -->
        <PackageId>Cameek.W3CssJs.Mermaid</PackageId>
        <Version>11.6.0</Version>
        <Authors>Cameek</Authors>
        <Company>Cameek</Company>
        <Description>Static Razor Class Library with Mermaid assets for diagrams in Blazor WebAssembly and Blazor Server apps.</Description>
        <PackageTags>blazor;mermaid;diagrams;razor-class-library;webassets</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/cameekorg/Cameek.W3CssJs.Mermaid</RepositoryUrl>
        <PackageProjectUrl>https://github.com/cameekorg/Cameek.W3CssJs.Mermaid</PackageProjectUrl>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>


    <ItemGroup>
        <SupportedPlatform Include="browser"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.0"/>
    </ItemGroup>
    
</Project>
